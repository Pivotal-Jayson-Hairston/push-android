<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.omnia.pushsdk"
    android:versionCode="2"
    android:versionName="0.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <!-- optional permission - used for debugging only -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.omnia.pushsdk.activity.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.omnia.pushsdk.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="org.omnia.pushsdk.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.omnia.pushsdk.activity.MainActivity" />
        </activity>

        <!-- This BroadcastReceiver is called whenever the Omnia Push SDK receives a push
             notification from GCM targetted at your application.  You can call it whatever
             you'd like in your application.  Make sure you add the action
             "YOUR.PACKAGE.NAME.omniapushsdk.RECEIVE_PUSH" to the broadcast receiver here. -->
        <receiver
            android:name=".broadcastreceiver.MyOmniaRemotePushLibBroadcastReceiver">
            <intent-filter>
                <action android:name="org.omnia.pushsdk.omniapushsdk.RECEIVE_PUSH"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
